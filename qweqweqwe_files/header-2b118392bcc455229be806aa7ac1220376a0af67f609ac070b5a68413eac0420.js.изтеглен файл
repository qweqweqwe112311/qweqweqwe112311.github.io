document.addEventListener("turbolinks:load",()=>{window.HideSearchListnerEnabled=!1;const e=[...document.querySelectorAll(".header_nav_toggle")];e.map(e=>{e.addEventListener("click",e=>t(e))});const t=e=>{console.log("toggleHeaderNav",e),e&&e.preventDefault();const t=document.querySelector(".nav-menu");e.currentTarget.classList.contains("lock_scroll")&&(t.classList.contains("active")?document.body.classList.remove("scroll-lock"):document.body.classList.add("scroll-lock")),document.body.classList.contains("ut-theme")&&window.HideSearchListnerEnabled&&a(!1),t.classList.toggle("active")},s=[...document.querySelectorAll(".search_show_btn")],c=[...document.querySelectorAll(".remote_text_search")];s.map(e=>e.addEventListener("click",e=>o(e))),c.map(e=>e.addEventListener("keyup",e=>i(e)));const o=e=>{const t=e.target,s=t.closest(".menu");if(document.body.classList.contains("ut-theme")){const e=document.querySelector(".nav-menu"),t=[...document.querySelectorAll(".search-dropbox")];e&&(e.classList.remove("active"),document.body.classList.remove("scroll-lock")),t.map(e=>{e.classList.contains("active")?e.classList.remove("active"):(e.classList.add("active"),n(document.querySelector(".header")))})}else{const e=t.closest(".search-box");e.classList.contains("active")?e.querySelector(".submit-btn").click():(e.classList.add("active"),s.classList.add("search-active"),n(e))}},n=e=>{const t=e=>!!e&&!!(e.offsetWidth||e.offsetHeight||e.getClientRects().length),s=c=>{window.HideSearchListnerEnabled&&!e.contains(c.target)&&t(e)&&(document.removeEventListener("click",s),window.HideSearchListnerEnabled=!1,a(e))};document.addEventListener("click",s),window.HideSearchListnerEnabled=!0},a=e=>{if(document.body.classList.contains("ut-theme")){window.HideSearchListnerEnabled&&(window.HideSearchListnerEnabled=!1);const e=[...document.querySelectorAll(".search-dropbox")];e.map(e=>{e.classList.remove("active")})}else{const t=e.closest(".menu"),s=e.closest(".search-box");s.classList.remove("active"),setTimeout(()=>{t&&t.classList.remove("search-active")},400)}},i=e=>{const t=e.target,s=t.closest("form"),c=s.querySelector(".submit-btn");c.click()}});